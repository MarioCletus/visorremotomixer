<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"

    app:cardUseCompatPadding="true"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/border_sync">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_product_avatar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/iv_product_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription=""
                android:scaleType="fitXY"
                tools:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center_vertical"
            android:textColor="@color/color_dark_grey"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingEnd="5dp"
            tools:text="Mijo">
        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.005"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:background="@color/color_medium_grey" />

        <ImageView
            app:tint="@color/black"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_balance"
            android:padding="5dp"
            android:layout_marginLeft="7dp"
            />

        <TextView
            android:id="@+id/tv_product_description"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:gravity="center_vertical"
            android:textColor="@color/color_acent_green"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            tools:text="No informado">

        </TextView>



        <ImageButton
            android:id="@+id/ib_more"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/more_contentDescription"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_vector_edit"
            app:tint="@color/color_acent_green" />


            <TextView
                android:id="@+id/tv_product_specific_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_11sdp"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/_2sdp"
                tools:text="10kg"
                android:visibility="gone">
            </TextView>

    </LinearLayout>>

</androidx.cardview.widget.CardView>