<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.SyncFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"

        >

        <LinearLayout
            android:id="@+id/ll_sync_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_sync"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:text="@string/sync_products_title"
                    android:textColor="@color/color_deep_green"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/pb_products"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:max="100"
                    android:layout_gravity="center_vertical"
                    android:progressBackgroundTint="@color/gray_light"
                    android:progressTint="@color/color_acent_green"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/tv_products_percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_sync"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"
                    android:text="@string/sync_mixer_title"
                    android:textColor="@color/color_deep_green"
                    />

                <ProgressBar
                    android:id="@+id/pb_mixers"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:max="100"
                    android:progressBackgroundTint="@color/gray_light"
                    android:progressTint="@color/color_acent_green"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/tv_mixers_percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_sync"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:text="@string/sync_establishment_title"
                    android:textColor="@color/color_deep_green"
                    />

                <ProgressBar
                    android:id="@+id/pb_establishments"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progressBackgroundTint="@color/gray_light"
                    android:progressTint="@color/color_acent_green"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/tv_establishments_percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_sync"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sync_corral_title"
                    android:textColor="@color/color_deep_green"
                    />

                <ProgressBar
                    android:id="@+id/pb_corrals"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progressBackgroundTint="@color/gray_light"
                    android:progressTint="@color/color_acent_green"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/tv_corrals_percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_sync"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sync_diet_title"
                    android:textColor="@color/color_deep_green"
                    />

                <ProgressBar
                    android:id="@+id/pb_diets"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progressBackgroundTint="@color/gray_light"
                    android:progressTint="@color/color_acent_green"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/tv_diets_percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_sync"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sync_round_title"
                    android:textColor="@color/color_deep_green"
                    />

                <ProgressBar
                    android:id="@+id/pb_rounds"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progressBackgroundTint="@color/gray_light"
                    android:progressTint="@color/color_acent_green"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/tv_rounds_percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_sync"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sync_users_title"
                    android:textColor="@color/color_deep_green"
                    />

                <ProgressBar
                    android:id="@+id/pb_users"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:progressBackgroundTint="@color/gray_light"
                    android:progressTint="@color/color_acent_green"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    />

                <TextView
                    android:id="@+id/tv_users_percentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <Button
                    android:id="@+id/btn_sync"
                    android:layout_width="203dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_rounded_green"
                    android:text="@string/sync_btn"
                    android:textSize="15sp"
                    app:backgroundTint="@color/color_medium_green"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="right"
                    android:text="@string/sync_intro"
                    android:textColor="@color/color_medium_grey"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@id/btn_sync"
                    app:layout_constraintTop_toBottomOf="@id/btn_sync" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_sync_no_internet"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="No hay conexión de internet"
            >

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="italic"
            android:text="Revise su conexión y vuelva a intentar nuevamente"
            >

        </TextView>

        <Button
            android:id="@+id/btn_retry"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reintentar"
            android:textAlignment="center"
            >

        </Button>
    </LinearLayout>





</FrameLayout>